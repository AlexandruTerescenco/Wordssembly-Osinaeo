<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="797.0" prefWidth="869.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.worssembly_osinaeo.GeneratorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextArea fx:id="text" prefHeight="150.0" prefWidth="760.0" promptText="Generate content">
         <font>
            <Font size="18.0" />
         </font></TextArea>

      <Pane fx:id="chck_Pane" prefHeight="200.0" prefWidth="200.0">
         <children>
             <CheckBox fx:id="chck_Random" mnemonicParsing="false" onAction="#set_Selected" prefHeight="38.0" prefWidth="116.0" text="Random" translateX="100.0" translateY="50.0">
                 <font>
                     <Font size="17.0" />
                 </font></CheckBox>
             <CheckBox fx:id="chck_Noun" mnemonicParsing="false" onAction="#set_Selected" prefHeight="38.0" prefWidth="116.0" text="Noun" translateX="250.0" translateY="50.0">
                 <font>
                     <Font size="17.0" />
                 </font></CheckBox>
             <CheckBox fx:id="chck_Adjective" mnemonicParsing="false" onAction="#set_Selected" prefHeight="38.0" prefWidth="116.0" text="Adjective" translateX="400.0" translateY="50.0">
                 <font>
                     <Font size="17.0" />
                 </font></CheckBox>
             <CheckBox fx:id="chck_Verb" mnemonicParsing="false" onAction="#set_Selected" prefHeight="38.0" prefWidth="116.0" text="Verb" translateX="550.0" translateY="50.0">
                 <font>
                     <Font size="17.0" />
                 </font></CheckBox>
             <CheckBox fx:id="chck_Prep" mnemonicParsing="false" onAction="#set_Selected" prefHeight="38.0" prefWidth="144.0" text="Preposition" translateX="700.0" translateY="50.0">
                 <font>
                     <Font size="17.0" />
                 </font></CheckBox>
         </children>
      </Pane>
      <Button fx:id="button_generate" alignment="CENTER" mnemonicParsing="false" onAction="#onGenerateButtonClick" prefHeight="38.0" prefWidth="116.0" text="Generate" translateX="150.0" translateY="150.0">
         <font>
            <Font size="17.0" />
         </font>
      </Button>
   </children>
</VBox>
